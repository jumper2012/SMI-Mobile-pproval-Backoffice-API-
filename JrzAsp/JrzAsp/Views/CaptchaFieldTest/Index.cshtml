@using JrzAsp.Lib.FlashSession
@using JrzAsp.Models
@using JrzAsp.Mvc.Captcha.Html
@model CaptchaFieldTestModel

@{
    ViewBag.Title = "Captcha Field Test";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">

        @if (FlashSessionService.HasMessage()) {
            foreach (var fms in FlashSessionService.GetAndClearMessages()) {
                <p class="alert alert-warning">@fms</p>
            }
        }

        @Html.ValidationSummary(false, "", new {@class = "text-danger bg-danger"})

        <form method="post">
            <div class="form-group">
                <label>Captcha Input:</label>
                @Html.CaptchaFieldFor(CaptchaFieldTestModel.CAPTCHA_ID, m => m.CaptchaUserInput)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>